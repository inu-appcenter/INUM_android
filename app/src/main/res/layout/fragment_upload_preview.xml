<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txt_title_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 등록 미리보기"
        android:textColor="@color/gunmetal"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="44dp"
        tools:ignore="MissingConstraints"/>

    <ImageView
        android:id="@+id/img_upload_whitetwo"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@color/white_two"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_upload"
        android:layout_marginTop="16dp" />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_upload"
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:background="#ffb8b8"
                app:layout_constraintTop_toBottomOf="@+id/img_upload_whitetwo">

                <com.baoyachi.stepview.HorizontalStepsViewIndicator
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v4.view.ViewPager>
    <TextView
        android:id="@+id/txt_upload_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gunmetal"
        android:textSize="18sp"
        android:text="자전거"
        app:layout_constraintTop_toBottomOf="@+id/viewpager_upload"
        android:layout_marginTop="20dp"
        app:layout_editor_absoluteX="20dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_upload_productPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gunmetal"
        android:textSize="24sp"
        android:text="123123원"
        app:layout_constraintTop_toBottomOf="@+id/txt_upload_productName"
        app:layout_editor_absoluteX="20dp"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txt_upload_preview_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff7c8c"
        android:textSize="14sp"
        android:text="자세한 사항은 판매자에게 문의하세요!"
        app:layout_constraintTop_toBottomOf="@+id/txt_upload_productPrice"
        app:layout_editor_absoluteX="20dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_upload_whitetwo2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@color/white_two"
        app:layout_constraintTop_toBottomOf="@+id/txt_upload_preview_msg"
        android:layout_marginTop="4.8dp" />

            <TextView
                android:id="@+id/txt_upload_productInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.4dp"
                android:textColor="@color/gunmetal"
                android:textSize="14sp"
                android:text="설명설명설염설ㅇ명설명설명"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="28dp"
                app:layout_constraintTop_toBottomOf="@id/img_upload_whitetwo2"/>
            <TextView
                android:id="@+id/txt_upload_productstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txt_upload_productInfo"
                android:text="-상품 상태:"
                app:layout_constraintLeft_toLeftOf="@+id/txt_upload_productInfo"
                android:layout_marginTop="18dp"
                android:textSize="14sp"
                android:textColor="@color/warm_grey"
                />
            <TextView
                android:id="@+id/txt_upload_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txt_upload_productstatus"
                android:text="-거래 방식:"
                app:layout_constraintLeft_toLeftOf="@+id/txt_upload_productstatus"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/warm_grey"
                />
            <TextView
                android:id="@+id/txt_upload_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txt_upload_method"
                android:text="-상품 상태:"
                app:layout_constraintLeft_toLeftOf="@+id/txt_upload_method"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/warm_grey"
                />
            <TextView
                android:id="@+id/txt_upload_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/txt_upload_place"
                android:text="-카테고리:"
                app:layout_constraintLeft_toLeftOf="@+id/txt_upload_place"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/warm_grey"
                />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>