<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:theme="@style/TextViewStyleSmallGunmetal"
            style="@style/TextViewStyleSmallGunmetal"
            android:text="이름"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/tv_sign_up_review_name"
            android:theme="@style/EditTextStyleLight"
            style="@style/EditTextStyleLight" />

        <TextView
            android:theme="@style/TextViewStyleSmallGunmetal"
            style="@style/TextViewStyleSmallGunmetal"
            android:text="학번"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/tv_sign_up_review_id"
            android:theme="@style/EditTextStyleLight"
            style="@style/EditTextStyleLight"/>

        <TextView
            android:theme="@style/TextViewStyleSmallGunmetal"
            style="@style/TextViewStyleSmallGunmetal"
            android:text="전화번호"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_sign_up_review_phone_num"
            android:theme="@style/EditTextStyleLight"
            style="@style/EditTextStyleLight" />

        <TextView
            android:theme="@style/TextViewStyleSmallGunmetal"
            style="@style/TextViewStyleSmallGunmetal"
            android:text="학과"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_sign_up_review_major"
            android:theme="@style/EditTextStyleLight"
            style="@style/EditTextStyleLight" />

    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:textColor="@color/gunmetal"
        android:textSize="15sp"
        android:layout_marginBottom="8dp"
        android:text="학생 정보를 확인했으면 \n회원가입을 완료해주세요!"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_up_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn_sign_up_next"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="다음"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/gunmetal"
        android:background="@drawable/upside_stroke_square_3dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
