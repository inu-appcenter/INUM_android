<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/container_signup">

    <TextView
        android:id="@+id/tv_sign_up_title"
        style="@style/TextViewStyleTitle"
        android:theme="@style/TextViewStyleTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.gowoon.inum.custom.NonSwipeViewPager
        android:id="@+id/viewpager_sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.baoyachi.stepview.HorizontalStepView
        android:id="@+id/step_view_sign_up"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toTopOf= "parent"
        />
</android.support.constraint.ConstraintLayout>