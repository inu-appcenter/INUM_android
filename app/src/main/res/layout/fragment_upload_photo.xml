<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/upload_photo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txt_title_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 등록하기"
        android:textColor="@color/gunmetal"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"/>

    <ImageView
        android:id="@+id/img_upload_whitetwo"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@color/white_two"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_upload"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txt_photo_regist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진 등록"
        android:textSize="12sp"
        android:textColor="@color/gunmetal"
        app:layout_constraintTop_toBottomOf="@+id/img_upload_whitetwo"
        android:layout_marginTop="11.1dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7.7dp"
        android:text="0/8"
        android:textColor="#1ac07a"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_photo_regist"
        app:layout_constraintLeft_toRightOf="@+id/txt_photo_regist" />

    <Button
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:id="@+id/btn_upload_photo"
        app:layout_constraintTop_toBottomOf="@+id/txt_photo_regist"
        app:layout_editor_absoluteX="19.2dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/photo_regist"
        android:text="+"
        android:textSize="30sp"
        android:textColor="@color/gunmetal"
        tools:ignore="MissingConstraints" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_upload_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19.2dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20.2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_photo_regist" />

    <Button
        android:id="@+id/btn_upload_photo_camera"
        android:layout_width="268.8dp"
        android:layout_height="46.1dp"
        android:background="@drawable/round_search"
        android:text="촬영하기"
        android:textColor="@color/gunmetal"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_upload_photo_nextstep"
        android:layout_marginBottom="115.1dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btn_upload_photo_album"
        android:layout_width="268.8dp"
        android:layout_height="46.1dp"
        android:background="@drawable/round_search"
        android:text="앨범 (여러장)"
        android:textColor="@color/gunmetal"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_photo_camera"
        android:layout_marginTop="11.5dp"
        android:visibility="invisible"/>
    <Button
        android:id="@+id/btn_upload_photo_delete"
        android:layout_width="268.8dp"
        android:layout_height="46.1dp"
        android:background="@drawable/photo_delete"
        android:text="삭제"
        android:textColor="@color/gunmetal"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_upload_photo_nextstep"
        android:layout_marginBottom="115.1dp"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/btn_upload_photo_cancle"
        android:layout_width="268.8dp"
        android:layout_height="46.1dp"
        android:background="@drawable/round_search"
        android:text="취소"
        android:textColor="@color/gunmetal"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_photo_camera"
        android:layout_marginTop="11.5dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/txt_photo_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*상품 사진이 등록되어야 합니다.."
        android:textSize="12sp"
        android:textColor="@color/orangey_red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_upload_photo_nextstep"
        android:layout_marginBottom="18.8dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_upload_photo_nextstep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/upside_stroke_square_3dp"
        tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>