<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_phone">

    <TextView
        android:id="@+id/tv_sign_up_phone"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="내 전화번호"
        android:textColor="@color/gunmetal"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="107dp"/>

    <EditText
        android:id="@+id/et_sign_up_phone"
        android:theme="@style/EditTextStyleLight"
        style="@style/EditTextStyleLight"
        android:layout_width="160dp"
        android:paddingTop="17dp"
        android:paddingBottom="7dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:hint="@null"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_sign_up_phone"/>

    <TextView
        android:id="@+id/tv_sign_up_phone_error"
        android:theme="@style/TextViewStyleSmallRed"
        style="@style/TextViewStyleSmallRed"
        android:layout_marginBottom="14dp"
        android:text="*휴대폰 인증을 해야 합니다."
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@id/btn_sign_up_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn_sign_up_next"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="다음"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/gunmetal"
        android:background="@drawable/upside_stroke_square_3dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</android.support.constraint.ConstraintLayout>