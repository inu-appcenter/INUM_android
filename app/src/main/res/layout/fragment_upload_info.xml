<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_title_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 등록하기"
        android:textColor="@color/gunmetal"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"/>
    <ImageView
        android:id="@+id/img_upload_whitetwo"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@color/white_two"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_upload"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txt_info_productname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품명"
        android:textSize="12sp"
        android:textColor="@color/gunmetal"
        app:layout_constraintTop_toBottomOf="@+id/img_upload_whitetwo"
        android:layout_marginTop="11.1dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="27dp"/>

    <EditText
        android:id="@+id/etv_upload_info_name"
        style="@style/EdittextStyle_login"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="3.5dp"
        android:hint="입력"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_info_productname" />

    <TextView
        android:id="@+id/txt_info_condition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 상태"
        android:textSize="12sp"
        android:textColor="@color/gunmetal"
        app:layout_constraintTop_toBottomOf="@+id/etv_upload_info_name"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/txt_info_productname" />
    <EditText
        android:id="@+id/etv_upload_info_condition"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        style="@style/EdittextStyle_login"
        android:hint="ex) 신상 or 중고 3개월 사용"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_info_condition"
        android:layout_marginTop="3.5dp"/>


    <TextView
        android:id="@+id/txt_info_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가격"
        android:textSize="12sp"
        android:textColor="@color/gunmetal"
        app:layout_constraintTop_toBottomOf="@+id/etv_upload_info_condition"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/txt_info_productname"/>
    <EditText
        android:id="@+id/etv_upload_info_price"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        style="@style/EdittextStyle_login"
        android:hint="입력"
        android:text="원"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="18dp"
        android:textColor="@color/gunmetal"
        android:textSize="18sp"
        android:textAlignment="viewEnd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_info_price"
        android:layout_marginTop="3.5dp"/>

    <TextView
        android:id="@+id/txt_info_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*상품 정보를 입력해야 합니다."
        android:textSize="12sp"
        android:textColor="@color/orangey_red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_upload_info_nextstep"
        android:layout_marginBottom="18.8dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_upload_info_nextstep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/upside_stroke_square_3dp"/>


</android.support.constraint.ConstraintLayout>