<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.UploadInfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="11.1dp"
            android:layout_marginStart="18.2dp"
            android:layout_marginEnd="20.2dp">

            <TextView
                style="@style/TextViewStyleSmallGunmetal"
                android:theme="@style/TextViewStyleSmallGunmetal"
                android:id="@+id/tv_upload_info_name"
                android:text="상품명"
                android:layout_marginStart="8.7dp"/>

            <EditText
                style="@style/EditTextStyleLight"
                android:theme="@style/EditTextStyleLight"
                android:id="@+id/etv_upload_info_name"
                android:layout_height="46dp"
                android:layout_marginTop="3.5dp"
                android:paddingStart="8.7dp"/>

            <TextView
                style="@style/TextViewStyleSmallGunmetal"
                android:theme="@style/TextViewStyleSmallGunmetal"
                android:id="@+id/tv_upload_info_status"
                android:layout_marginTop="15dp"
                android:layout_marginStart="8.7dp"
                android:text="상품 상태"
                />

            <EditText
                style="@style/EditTextStyleLight"
                android:theme="@style/EditTextStyleLight"
                android:id="@+id/etv_upload_info_status"
                android:layout_height="46dp"
                android:layout_marginTop="3.5dp"
                android:hint="ex) 신상 or 중고 3개월 사용"
                android:paddingStart="8.7dp"/>

            <TextView
                style="@style/TextViewStyleSmallGunmetal"
                android:theme="@style/TextViewStyleSmallGunmetal"
                android:id="@+id/tv_upload_info_price"
                android:layout_marginTop="15dp"
                android:layout_marginStart="8.7dp"
                android:text="가격"
               />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="46dp">
                
                <EditText
                    android:id="@+id/etv_upload_info_price"
                    android:layout_height="46dp"
                    android:layout_marginTop="3.5dp"
                    android:inputType="number"
                    android:paddingStart="8.7dp"
                    style="@style/EditTextStyleLight"
                    android:theme="@style/EditTextStyleLight"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:text="원"
                    android:textColor="@color/gunmetal"
                    android:textSize="18sp"
                    android:layout_gravity="end"
                    android:layout_marginVertical="9.5dp"
                    android:layout_marginEnd="14.4dp"/>
                
            </FrameLayout>
        </LinearLayout>

        <TextView
            style="@style/TextViewStyleSmallRed"
            android:theme="@style/TextViewStyleSmallRed"
            android:id="@+id/tv_upload_info_message"
            android:layout_marginBottom="18.8dp"
            android:text="*상품 정보를 입력해야 합니다."
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>