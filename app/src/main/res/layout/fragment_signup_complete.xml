<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="301.5dp"
        android:layout_height="230.7dp"
        android:layout_marginTop="74dp"
        android:elevation="3dp"
        android:background="@drawable/gradient_btn"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txt_sidi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="76.5dp"
            android:gravity="center"
            android:textColor="@color/gunmetal"
            android:lines="2"
            android:text="회원가입이 완료되었습니다.\n이메일 인증완료 후 로그인해주세요"
            android:textSize="16.2sp" />

        <View
            android:id="@+id/view10"
            android:layout_width="match_parent"
            android:layout_height="0.9dp"
            android:layout_marginTop="52.8dp"
            android:background="#e0e0e0"/>

        <Button
            android:id="@+id/btn_sign_up_submit"
            android:layout_width="match_parent"
            android:layout_height="50.4dp"
            android:gravity="center"
            android:background="#00ffffff"
            android:textColor="@color/gunmetal"
            android:text="확인"
            android:textSize="16sp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>