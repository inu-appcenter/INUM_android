<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SettingPushAlarmFragment"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_constraint_push_alarm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_setting_pushalarm_"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginTop="20dp"
            android:text="푸시 알림 설정"
            android:textColor="@color/gunmetal"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view_pushalarm_partition"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="65dp"
            android:background="@color/white_two"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/bundle_setting_pushalarm"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/item_mypage_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_pushalarm_partition">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="24dp"
                android:text="푸시 알림"
                android:textColor="@color/gunmetal"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/switch_setting_pushalarm"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginEnd="14dp"
                android:background="#00ffffff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_setting_pushalarm_gosetting"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:paddingStart="24dp"
            android:background="@drawable/item_mypage_list"
            android:text="환경설정 바로가기"
            android:gravity="center_vertical"
            android:textColor="@color/gunmetal"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/bundle_setting_pushalarm"/>

        <Button
            android:id="@+id/btn_setting_pushalarm"
            android:layout_width="match_parent"
            android:layout_height="53.8dp"
            android:background="@drawable/upside_stroke_square_3dp"
            android:text="설정 완료"
            android:textColor="@color/gunmetal"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </android.support.constraint.ConstraintLayout>
</FrameLayout>