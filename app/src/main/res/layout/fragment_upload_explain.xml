<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/upload_explain">

    <TextView
        android:id="@+id/txt_title_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 등록하기"
        android:textColor="@color/gunmetal"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"/>

    <ImageView
        android:id="@+id/img_upload_whitetwo"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@color/white_two"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_upload"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txt_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 설명"
        android:textColor="@color/gunmetal"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_upload_whitetwo"
        android:layout_marginTop="11.1dp"
        android:layout_marginStart="26.9dp" />

        <EditText
            android:id="@+id/etv_upload_explain"
            android:layout_width="match_parent"
            android:layout_height="133.4dp"
            android:background="@drawable/round_square_4dp_stroke"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_explain"
            android:layout_marginTop="3.5dp"
            android:layout_marginHorizontal="19.2dp"
            android:hint="  입력"
            android:gravity="top"/>

    <TextView
        android:id="@+id/txt_explain_deal"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginTop="11.1dp"
        android:text="거래 방식"
        android:textColor="@color/gunmetal"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/txt_explain"
        app:layout_constraintTop_toBottomOf="@+id/etv_upload_explain" />

    <RadioGroup
        android:id="@+id/radiogroup_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3.7dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_explain_deal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">

    <RadioButton
        android:id="@+id/btn_upload_explain_direct"
        android:layout_width="161.3dp"
        android:layout_height="48dp"
        android:layout_marginTop="3.7dp"
        android:background="@drawable/explain_radiobtn_left"
        android:text="직거래"
        android:gravity="center"
        android:button="@null"
        android:textColor="@color/gunmetal"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_explain_deal"
        app:layout_editor_absoluteX="32dp" />

        <RadioButton
            android:id="@+id/btn_upload_explain_delivery"
            android:layout_width="161.3dp"
            android:layout_height="48dp"
            android:layout_marginTop="3.7dp"
            android:background="@drawable/explain_radiobtn_right"
            android:button="@null"
            android:gravity="center"
            android:text="배송"
            android:textColor="@color/gunmetal"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@id/btn_upload_explain_direct"
            app:layout_constraintTop_toBottomOf="@+id/txt_explain_deal" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/layout_upload_direct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup_explain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible">
        <TextView
            android:id="@+id/txt_explain_place"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginTop="12.8dp"
            android:layout_marginLeft="7.7dp"
            android:layout_marginBottom="3.5dp"
            android:text="직거래 장소"
            android:textColor="@color/gunmetal"
            android:textSize="12sp" />


        <!--TODO
        상품설명 입력 창 디자인참고해서 패딩 조절-->
        <EditText
            android:id="@+id/etv_upload_explain_place"
            android:layout_width="321.6dp"
            android:layout_height="46.1dp"
            android:hint="입력" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_explain_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*상품 설명과 거래 방식을 입력해야 합니다."
        android:textSize="12sp"
        android:textColor="@color/orangey_red"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_upload_explain_nextstep"
        android:layout_marginBottom="18.8dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/btn_upload_explain_nextstep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/upside_stroke_square_3dp"
        />


</android.support.constraint.ConstraintLayout>