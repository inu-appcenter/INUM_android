<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/upload_cloth"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_title_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품 등록하기"
        android:textColor="@color/gunmetal"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="44dp"/>
    <ImageView
        android:id="@+id/img_upload_whitetwo"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:src="@color/white_two"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_upload"
        android:layout_marginTop="16dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cloth_constraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_upload_whitetwo"
        app:layout_constraintBottom_toBottomOf="parent">
        <Button
            android:id="@+id/btn_upload_cloth_man"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:text="남성의류"
            android:textColor="@color/gunmetal"
            android:textSize="14sp"
            android:background="#00ffffff"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/img_bar_man"
        android:layout_width="287dp"
        android:layout_height="2dp"
        android:src="@color/pale_grey"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_cloth_man"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_upload_cloth_woman"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:text="여성의류"
        android:textColor="@color/gunmetal"
        android:textSize="14sp"
        android:background="#00ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_bar_man"
        android:layout_marginTop="10dp" />
    <ImageView
        android:id="@+id/img_bar_woman"
        android:layout_width="287dp"
        android:layout_height="2dp"
        android:src="@color/pale_grey"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_cloth_woman"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_upload_cloth_etc"
        android:layout_width="75dp"
        android:layout_height="20dp"
        android:text="기타"
        android:textColor="@color/gunmetal"
        android:textSize="14sp"
        android:background="#00ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_bar_woman"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:layout_width="287dp"
        android:layout_height="2dp"
        android:src="@color/pale_grey"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_cloth_etc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"/>
</android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>