<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="52dp">

    <ImageView
        android:id="@+id/iv_item_myproduct_image"
        android:layout_width="38dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/round_square_8dp"
        android:backgroundTint="@color/white_f5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_myproduct_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="19dp"
        android:text="디자인론 전공책"
        android:textColor="#000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_item_myproduct_image"
        app:layout_constraintTop_toTopOf="parent" />
    
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/pale_grey_two"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/iv_item_myproduct_option"
        android:layout_width="42dp"
        android:layout_height="45dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/optionbar" />
</androidx.constraintlayout.widget.ConstraintLayout>