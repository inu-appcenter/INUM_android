<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/faded_orange</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:colorBackground">@color/white</item>

        <!--NoActionBar-->
        <item name = "windowNoTitle">true</item>
    </style>

    <style name="EditTextStylePinkishGrey" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textColorHint">@color/pinkish_grey</item>
        <item name="android:colorControlNormal">@color/pale_grey</item>
        <item name="android:colorControlActivated">@color/pale_grey</item>
    </style>

    <!--Login, ForgotPw, SignUp-->
    <style name="EditTextStyleLight" parent="EditTextStylePinkishGrey">
        <item name="android:textSize">16sp</item>
        <item name="android:hint">입력</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextStyleBox" parent="EditTextStylePinkishGrey">
        <item name="android:textColor">@color/pinkish_grey</item>
        <item name="android:textColorHint">@color/pinkish_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:hint">입력</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingBottom">6.2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/round_square_4dp_stroke_2dp</item>
        <item name="android:inputType">textMultiLine</item>
    </style>


    <style name="EdittextStyle_setting_quest" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/pinkish_grey</item>
        <item name="android:textColorHint">@color/pinkish_grey</item>
        <item name="android:colorControlNormal">@color/pale_grey</item>
        <item name="android:colorControlActivated">@color/warm_grey</item>
    </style>

    <style name="EdittextStyle_setting" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">@color/pinkish_grey</item>
        <item name="android:colorControlNormal">#000000</item>
        <item name="android:colorControlActivated">#000000</item>
    </style>

    <style name="TextViewStyleSmall" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewStyleSmallRed" parent="TextViewStyleSmall">
        <item name="android:textColor">@color/orangey_red</item>
    </style>

    <style name="TextViewStyleSmallGunmetal" parent="TextViewStyleSmall">
        <item name="android:textColor">@color/gunmetal</item>
    </style>

    <style name="TextViewStyleTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">29dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gunmetal</item>
    </style>
</resources>
